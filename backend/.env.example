# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
# ⚠️ IMPORTANT: Use the SERVICE ROLE KEY for backend, not the anon key!
# The service role key bypasses Row Level Security (RLS) policies.
# Get it from: Supabase Dashboard > Settings > API > service_role key (secret)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_role_key_here  # Use SERVICE ROLE key!

# Application Configuration
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Video Processing Configuration
MAX_VIDEO_DURATION=3600  # Maximum video duration in seconds (1 hour)
FLASHCARD_INTERVAL=120  # Show flashcard every 2 minutes
QUESTIONS_PER_SEGMENT=1  # Number of questions per video segment
FINAL_QUIZ_QUESTIONS=10  # Number of questions in final quiz
